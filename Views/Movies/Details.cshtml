@model List<Movie>

@foreach(Movie movie in Model)
{
    <h1>----------------------------------</h1>
    <h2>@movie.Name</h2>
    <h4>Genre: @movie.Genre</h4>
    <h4>Year of release: @movie.ReleaseYear</h4>
    <h4>Budget: $@movie.Budget</h4>
    <h4>Actors:</h4>
    <ul>
        @if(movie.AllActors.Count > 0)
        {
            foreach (var kvp in movie.AllActors)
            {
                <li>@kvp.Key.Name as @kvp.Value</li>
            }
        } else
        {
            <li>This movie has no Actors</li>
        }
    </ul>
    <h4>Ratings:</h4>
    <ul>
        @if(movie.AllRatings.Count > 0)
            {
            foreach (Rating rating in movie.AllRatings)
            {
                <li>@rating.User.Name: @rating.Score <br>
                    @if(rating.Comment != null)
                    {
                        <span>@rating.Comment</span>
                    }
                </li>
            }
        } else
        {
            <li>This movie has no ratings</li>
        }
    </ul>
    <a asp-action="CreateRating" method="get">Rate</a>
    <h1>----------------------------------</h1>
}


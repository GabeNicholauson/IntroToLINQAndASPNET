@model Actor

<h1>----------------------------------</h1>
<h2>@Model.Name</h2>
<h4>Salary: @Model.Salary</h4>
<h4>Rolls:</h4>
<ul>
    @foreach(var kvp in Model.AllRoles)
    {
        <li>@kvp.Key.Name as @kvp.Value</li>
    }
</ul>
<h4>Ratings:</h4>
<ul>
    @foreach (Rating rating in Model.AllRatings)
    {
            <li>@rating.User.Name gave this movie a @rating.Score <br />
            @if(rating.Comment != null)
            {
                <span>@rating.Comment</span>
            }
            </li>
    }
</ul>
<h1>----------------------------------</h1>

